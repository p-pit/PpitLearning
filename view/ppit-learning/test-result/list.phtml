<table class="table table-striped ppit_index">
	<tr>
		<th>&nbsp;</th>

<?php foreach ($context->getConfig('testResult/list') as $propertyId => $rendering) : ?>
	<?php 
	$property = $context->getConfig('testResult')['properties'][$propertyId];
	if ($property['type'] == 'specific') $property = $context->getConfig($property['definition']);
	?>
	<?php if ($property) : ?>
		<th align="center">
		<?php $label = $property['labels'][$context->getLocale()] ?>
		<?php if ($label) : ?>
			<button type="button" class="btn btn-default btn-xs ppit-sort-anchor" id="<?php echo $propertyId ?>-anchor">
				<span><?php echo $label ?></span>
			<?php if ($major == $propertyId) : ?>
				<span class="glyphicon glyphicon-triangle-<?php echo ($dir == 'ASC') ? 'top' : 'bottom' ?>"></span>
			<?php endif ?>
			</button>
		<?php endif;?>
		</th>
	<?php endif;?>
<?php endforeach;?>

		<th>&nbsp;</th>
	</tr>
	
	<tr class="test-result">
		<td style="text-align: center">
			<button type="button" class="btn btn-default index-btn test-result-detail-anchor" title="<?php echo $this->translate('Detail', 'ppit-core', $context->getLocale())?>" id="test-result-detail-anchor_0">
				<span class="glyphicon glyphicon-plus" id="add-glyphicon"></span>
			</button>
		</td>
		<td colspan="7">&nbsp;</td>
	</tr>

<?php foreach ($results as $result) : ?>
	
	<tr class="test-result">
	
		<td style="text-align: center">
			<button type="button" class="btn btn-default index-btn test-result-detail-anchor" title="<?php echo $this->translate('Detail', 'ppit-core', $context->getLocale())?>" id="test-result-detail-anchor_<?php echo $result->id ?>">
				<span class="glyphicon glyphicon-zoom-in" id="<?php echo $result->id ?>-glyphicon"></span>
			</button>
		</td>

	<?php foreach ($context->getConfig('testResult/list') as $propertyId => $rendering) : ?>
		<?php 
		$property = $context->getConfig('testResult')['properties'][$propertyId];
		if ($property['type'] == 'specific') $property = $context->getConfig($property['definition']);
		?>
		<?php if ($property) : ?>
	
			<?php if ($rendering == 'date') : ?>
		<td><?php echo $context->decodeDate($result->properties[$propertyId]) ?></td>

			<?php elseif ($rendering == 'time') : ?>
		<td><?php echo $result->properties[$propertyId] ?></td>

			<?php elseif ($rendering == 'number') : ?>
		<td style="text-align: right"><?php echo $context->formatFloat($result->properties[$propertyId], 2) ?></td>

			<?php elseif ($rendering =='select') : ?>
		<td><?php echo $property['modalities'][$result->properties[$propertyId]][$context->getLocale()] ?></td>

			<?php else : ?>
		<td><?php echo $result->properties[$propertyId] ?></td>

			<?php endif;?>

		<?php endif;?>
	<?php endforeach;?>
	</tr>
	
<?php endforeach; ?>

</table>
